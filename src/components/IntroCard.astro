---
import Card from "./Card/index.astro";
import Button from "./Button.astro";
import {LINKS, WELCOME, METADATA} from "../lib/constants";
import {Icon} from 'astro-icon/components';
import {Image} from "astro:assets";
import portfolioImage from '../assets/me.webp'
---

<Card colSpan="md:col-span-3" rowSpan="md:row-span-4">
    <div class="flex w-full h-full">
        <div class="flex flex-col justify-between md:max-h-[300px] gap-4">
            <div class="flex flex-col h-full">
                <h6 class="text-sm font-light m-0 text-gray-200">welcome</h6>
                {WELCOME.description.map((item, index) => (<p class="m-0 font-light text-xl">{item}</p>))}
            </div>
            <div class="flex gap-4">
                {LINKS.map(({link, logo, name}) => (<a href={link} aria-label={name} target="_blank" key={name}>
                            <Button aria-label={name}>
                                <Icon name={logo} class="h-6"/>
                                <span class="sr-only">{name} Profile</span>
                            </Button>
                        </a>))}
            </div>
        </div>
        <Image
                width="275"
                height="275"
                src={portfolioImage}
                class="w-auto max-h-[415px] select-none absolute right-[-70px] bottom-[-70px] z-[-1] opacity-40 md:opacity-100 md:relative md:right-[-50px] md:bottom-auto md:z-auto pointer-events-none shadow-border"
                alt={`${METADATA.name}`}
                loading="eager"
        />
    </div>
</Card>
