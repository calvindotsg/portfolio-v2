---
import Card from "./Card/index.astro";
import {ABOUT_ME} from "../lib/constants";
---

<Card colSpan="md:col-span-1" rowSpan="md:row-span-4" title="About me">
    <div class="flex flex-col gap-2">
        <ul class="text-sm-1 font-light list-disc list-inside">
            {ABOUT_ME.description.map((item, index) => (
                    <li key={index}>{item}</li>))}
        </ul>
    </div>
</Card>
